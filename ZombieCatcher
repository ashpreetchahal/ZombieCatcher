import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class ZombieCatcher {
    public static boolean overlappingPeriods(int start1, int end1, int start2, int end2) {
        return start1 < end2 && start2 < end1;
    }

    public static int getVisitors(int begin, int finish) {
        Scanner kbd = new Scanner(System.in);
        int numQuarantine = 0;
        System.out.println("Enter the number of visitors:");
        int visitors = kbd.nextInt();
        kbd.nextLine();
        for (int i = 0; i < visitors; i++) {
            System.out.println("Enter the visitor's name:");
            String name = kbd.nextLine();
            System.out.println("Enter the arrival time:");
            int arrival = kbd.nextInt();
            kbd.nextLine();
            System.out.println("Enter the departure time:");
            int departure = kbd.nextInt();
            kbd.nextLine();
            if (overlappingPeriods(begin, finish, arrival, departure)) {
                System.out.println(name + " needs to be quarantined.");
                numQuarantine++;
            } else {
                System.out.println(name + " does not need to be quarantined.");
            }
        }
        return numQuarantine;
    }

    public static void main(String[] args) {
        Scanner kbd = new Scanner(System.in);
        System.out.println("Enter the start time:");
        int start = kbd.nextInt();
        System.out.println("Enter the end time:");
        int end = kbd.nextInt();

        if (args.length == 0) {
            int numQuarantine = getVisitors(start, end);
            System.out.println("Number of potential zombies: " + numQuarantine);
        } else {
            int numQuarantine = 0;
            for (int i = 0; i < args.length; i++) {
                try {
                    File file = new File(args[i]);
                    Scanner reader = new Scanner(file);
                    while (reader.hasNext()) {
                        String name = reader.next();
                        int arrival = reader.nextInt();
                        int departure = reader.nextInt();
                        if (overlappingPeriods(start, end, arrival, departure)) {
                            System.out.println(name + " needs to be quarantined.");
                            numQuarantine++;
                        }
                    }
                    reader.close();
                } catch (FileNotFoundException e) {
                    System.out.println("WARNING: " + args[i] + " not found.");
                }
            }
            System.out.println("Number of potential zombies: " + numQuarantine);
        }
    }


    public static boolean overlappingDayAndNightPeriods(int start1, int end1, int start2, int end2) {
        return start2 > end1 && start1 < start2;
    }
}
